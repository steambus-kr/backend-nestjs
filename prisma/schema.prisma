generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model State {
  id                Int       @id
  last_fetched_info DateTime?
  last_fetched_pc   DateTime?
}

model Game {
  app_id          Int           @id
  title           String        @db.TinyText
  description     String        @db.Text
  owner_count     Int
  release_date    DateTime?
  genres          Genre[]
  player_count    PlayerCount[]
  thumbnail_src   String
  review_positive Int
  review_negative Int
  review_ratio    Float?
}

model OutdatedGame {
  app_id     Int      @id
  added_time DateTime @default(now())
}

model PlayerCount {
  app_id Int
  app    Game @relation(fields: [app_id], references: [app_id], onDelete: Cascade)

  count Int
  date  DateTime

  @@id([app_id, date])
}

model Genre {
  genre_id   Int    @id
  genre_name String
  games      Game[]
}
